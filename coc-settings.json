{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", "grabkit.yaml", "doc.go", "ci.json", "main.go"],
            "filetypes": ["go"],
            "disableWorkspaceFolders": true,
            "progressOnInitialization": true
        },
        "rust": {
          "command": "rust-analyzer",
          "filetypes": ["rust"],
          "rootPatterns": ["Cargo.toml"]
        }
    },
    "suggest.autoTrigger": "trigger"
}
